{
  "name": "ng-sm-ms",
  "version": "0.5.0",
  "description": "使用SM.MS图床的API写的桌面应用程序",
  "author": "Ajanuw <ajanuw1995@gmail.com> (https://github.com/januwA)",
  "main": "main.js",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "build": "ng build",
    "watch": "ng build  --watch",
    "e-start": "electron .",
    "e-win": "npm run build && electron-builder -w",
    "e-mac": "npm run build && electron-builder -m",
    "e-linux": "npm run build && electron-builder -l",
    "e-mwl": "npm run build && electron-builder -mwl"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.1.4",
    "@angular/cdk": "^12.1.4",
    "@angular/common": "~12.1.4",
    "@angular/compiler": "~12.1.4",
    "@angular/core": "~12.1.4",
    "@angular/forms": "~12.1.4",
    "@angular/material": "^12.1.4",
    "@angular/platform-browser": "~12.1.4",
    "@angular/platform-browser-dynamic": "~12.1.4",
    "@angular/router": "~12.1.4",
    "ajanuw-waterfall.js": "^0.1.5",
    "ajanuw-widgets-angular": "^0.1.1",
    "localforage": "^1.7.3",
    "rxjs": "~6.6.0",
    "tslib": "^2.2.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.1.4",
    "@angular/cli": "~12.1.4",
    "@angular/compiler-cli": "~12.1.4",
    "@angular/language-service": "~12.1.4",
    "@types/node": "^12.11.1",
    "@types/jasmine": "~3.8.0",
    "@types/jasminewd2": "~2.0.3",
    "codelyzer": "^5.1.2",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~2.1.0",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "protractor": "~5.4.3",
    "ts-node": "~8.3.0",
    "tslint": "~5.18.0",
    "typescript": "~4.3.5",
    "electron": "13.1.7"
  },
  "build": {
    "appId": "com.ajanuw.sm-ms",
    "productName": "sm-ms",
    "copyright": "ajanuw",
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg",
      "icon": "docs/assets/icon@512x512.png"
    },
    "linux": {
      "category": "Network",
      "icon": "docs/assets"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "docs/assets/icon@512x512.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
